{
  "name": "relay-gasless-cctp",
  "version": "1.0.0",
  "description": "Gasless Cross Chain Transfer Protocol powered by Gelato Relay",
  "scripts": {
    "build": "yarn install && yarn compile && npx tsc",
    "clean": "yarn hardhat clean && rm -rf dist",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy",
    "test": "npx hardhat test",
    "format": "prettier --write '*/**/*.*{js,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "yarn husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@gelatonetwork/relay-context": "^3.0.0",
    "@gelatonetwork/relay-sdk": "4.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomiclabs/hardhat-ethers": "2.2.3",
    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "@openzeppelin/contracts": "4.9.2",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "11.0.0",
    "@typechain/hardhat": "8.0.0",
    "@types/chai": "4.3.5",
    "@types/mocha": "10.0.1",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "chai": "4.3.7",
    "dotenv": "16.3.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "hardhat": "2.16.0",
    "hardhat-deploy": "0.11.31",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.9.1",
    "typechain": "8.2.0",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "*.*{js,json,md,ts,sol,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
