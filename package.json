{
  "name": "gasless-cctp",
  "version": "1.0.0",
  "description": "Automated & Gasless Cross Chain Transfer Protocol",
  "scripts": {
    "build": "yarn install && yarn compile && npx tsc",
    "clean": "yarn hardhat clean && rm -rf dist",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy",
    "test": "npx hardhat test",
    "format": "prettier --write '*/**/*.*{js,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "yarn husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@gelatonetwork/automate-sdk": "2.17.1-beta",
    "@gelatonetwork/relay-context": "3.2.0",
    "@gelatonetwork/relay-sdk": "5.2.0",
    "@gelatonetwork/web3-functions-sdk": "2.1.4",
    "@nomicfoundation/hardhat-ethers": "3.0.4",
    "@openzeppelin/contracts": "4.9.3",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v6": "0.5.0",
    "@typechain/hardhat": "9.0.0",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "dotenv": "16.3.1",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "6.7.0",
    "hardhat": "2.17.2",
    "hardhat-deploy": "0.11.37",
    "husky": "8.0.3",
    "ky": "1.0.1",
    "lint-staged": "14.0.1",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.6.2",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "10.9.1",
    "typechain": "8.3.1",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.*{js,json,md,ts,sol,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
